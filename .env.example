# Django Settings
DEBUG=False
SECRET_KEY=dein-geheimer-key-hier-generieren
ALLOWED_HOSTS=gym.last-strawberry.com,www.gym.last-strawberry.com

# MariaDB Database
DB_ENGINE=django.db.backends.mysql
DB_NAME=homegym_db
DB_USER=homegym_user
DB_PASSWORD=dein_sicheres_passwort
DB_HOST=localhost
DB_PORT=3306

# Static/Media Files
STATIC_ROOT=/var/www/vhosts/last-strawberry.com/gym/staticfiles/
MEDIA_ROOT=/var/www/vhosts/last-strawberry.com/gym/media/

# Security (für Production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Redis (optional)
REDIS_URL=redis://127.0.0.1:6379/1

# AI Coach - LLM Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# OpenRouter (Remote 70B Fallback)
# ⚠️ SICHERHEITSHINWEIS: API Keys NICHT hier speichern!
# Nutze stattdessen: python ai_coach/secrets_manager.py set OPENROUTER_API_KEY
# Fallback (nur Development): OPENROUTER_API_KEY kann hier gesetzt werden
OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct
USE_OPENROUTER_FALLBACK=True
